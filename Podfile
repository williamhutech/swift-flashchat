platform :ios, '13.0'
# Minimum version for iOS

target 'Flash Chat iOS13' do
  use_frameworks!

  # Pods for Animating Flash Chat Name
  pod 'CLTypingLabel'
  
  # Pods for Google's Firebase
  pod 'Firebase/Auth'
  pod 'Firebase/Firestore'
  
  # Pods for Having Textfield Above Keyboard
  pod 'IQKeyboardManagerSwift'


end
